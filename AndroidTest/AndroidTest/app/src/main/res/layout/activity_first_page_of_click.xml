<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPageOfClick">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MainClick1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#B1A5A5"
        android:text="Click 1"
        android:textColor="#5A0707"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MainClick2"
        android:layout_width="415dp"
        android:layout_height="364dp"
        android:background="#5A0707"
        android:text = "Click 2"
        android:textSize="50dp"
        android:textColor="#B1A5A5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        tools:ignore="DuplicateIds" />



</androidx.constraintlayout.widget.ConstraintLayout>